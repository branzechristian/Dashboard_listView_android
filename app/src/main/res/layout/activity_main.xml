<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".MainActivity">



    <ImageView
        android:layout_width="152dp"
        android:layout_height="146dp"
        android:src="@drawable/logo"
        android:layout_gravity="center">
    </ImageView>

    <EditText
        android:id="@+id/C_user_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="22dp"
        android:hint="SimpleGate"
        tools:ignore="InvalidId"></EditText>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to continue"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="#6659E3"
        android:orientation="vertical">


        <TextView
            android:id="@+id/C_email"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:text="Amount : XCFA"
            android:textStyle="bold"
            android:elegantTextHeight="true"
            tools:ignore="InvalidId">
        </TextView>

        <TextView
            android:id="@+id/C_phone"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:text="Title :"
            android:elegantTextHeight="true"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/C_password"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_gravity="center"
            android:text="Benefactor :"
            android:elegantTextHeight="true"
            android:textStyle="bold"/>

    </LinearLayout>




    <Button
        android:id="@+id/C_signUp_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Download File"
        android:textColor="@color/white">
    </Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="#6659E3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="<<"
            android:elegantTextHeight="true"/>
        <TextView
            android:id="@+id/TV_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" 1 "
            android:elegantTextHeight="true"/>
        <TextView
            android:id="@+id/TV_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" 2 "
            android:elegantTextHeight="true"/>
        <TextView
            android:id="@+id/TV_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" 3 "
            android:elegantTextHeight="true"/>
        <TextView
            android:id="@+id/TV_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" 4 "
            android:elegantTextHeight="true"/>
        <TextView
            android:id="@+id/TV_06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" >> "
            android:elegantTextHeight="true"/>
    </LinearLayout>

</LinearLayout>